        }
        .login .login-content {
            padding: 30px 40px;
            color: #999;
            width: 450px;
            margin: 0px auto;
        }
        .login .login-header {
            position: absolute;
            top: -80px;
            left: 50%;
            right: 0px;
            width: 450px;
            padding: 0px 40px;
            margin-left: -225px;
            font-weight: 900;
        }
        .btn{
            border-radius: 3px !important;
        }
        .login .login-header .icon {
            position: absolute;
            right: 40px;
            top: -2px;
            opacity: 0.15;
        }
        .login .login-header .icon i {
            font-size: 70px;
        }
        .login .login-header .brand {
            padding: 0px;
            font-size: 28px;
        }

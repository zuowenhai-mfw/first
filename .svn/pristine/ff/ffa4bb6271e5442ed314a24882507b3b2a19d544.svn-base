<body>

<div style='width:100%;display: table;background: none repeat scroll 0% 0% #2D353C !important;position: absolute;top: 20%;'>
    <div class="login bg-black animated fadeInDown">
        <!-- begin brand -->
        <div class="login-header">
            <div class="brand">
               产品生命周期管理系统<br/>PLM
            </div>
            <div class="icon">
                <i class="fa fa-sign-in"></i>
            </div>
        </div>
        <!-- end brand -->
        <div class="login-content">
            <form  class="margin-bottom-0" novalidate>
                <div class="form-group m-b-md">
                    <input type="text" class="form-control input-lg" data-ng-model="user.username" placeholder="用户名" />
                </div>
                <div class="form-group m-b-md">
                    <input type="password" class="form-control input-lg" data-ng-model="user.password" placeholder="密码" />
                </div>
                <!--<div class="checkbox m-b-md">
                    <label>
                        <input type="radio" name="type" value="1" data-ng-model="user.rolename"/> 产品
                    </label>&nbsp;&nbsp;
                    <label>
                        <input type="radio" name="type" value="2" data-ng-model="user.rolename"/> 销售
                    </label>&nbsp;&nbsp;
                    <label>
                        <input type="radio" name="type" value="3" data-ng-model="user.rolename"/> 库房
                    </label>&nbsp;&nbsp;
                    <label>
                        <input type="radio" name="type" value="4" data-ng-model="user.rolename"/> 生产
                    </label>&nbsp;&nbsp;
                    <label>

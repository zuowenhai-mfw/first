<div class="modal-header">
    <button type='button' class='close' data-ng-click="cancel();"><i class="fa fa-close"></i></button>
    <h4 class="modal-title">{{title}}授权登记</h4>
</div>
<div class="modal-body">
    <form action="" name="utmAddAuthIdForm" class="form-horizontal">
        <div class="form-group">
            <div data-ng-class="{'has-error':utmAddAuthIdForm.authCodeId.$dirty && utmAddAuthIdForm.authCodeId.$invalid}">
            <label class="col-sm-2 control-label"><span class="asterisk_red">*</span>防护板序列号：</label>

            <div class="col-sm-4">
                <input type="text" class="form-control" data-ng-model="authorizationCode.authCodeId" authcodeid-ensure-unique name="authCodeId" required autocomplete="off"
                       readonly/>
            </div>
            </div>

            <!--<label class="col-sm-2 control-label"><span class="asterisk_red">*</span>硬件序列号：</label>

            <div class="col-sm-4">
                <input type="text" class="form-control" data-ng-model="authorizationCode.hardwareSerialNumber" name="hardwareSerialNumber" required autocomplete="off"/>
            </div>-->

            <label class="col-sm-2 control-label"><span class="asterisk_red">*</span>硬件序列号：</label>

            <div class="col-sm-4">
                <div class="input-group">
                    <input type="text" class="form-control" readonly data-ng-required="true" id="hardwareSerialNumber" name="hardwareSerialNumber" data-ng-model="authorizationCode.hardwareSerialNumber">
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-white dropdown-toggle" data-toggle="dropdown">
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-right" role="menu">
                        </ul>
                    </div>
                    <!-- /btn-group -->
                </div>
            </div>


        </div>
        <div class="form-group">
            <div data-ng-class="{'has-error':utmAddAuthIdForm.guagCardNo.$dirty && utmAddAuthIdForm.guagCardNo.$invalid}">
            <label class="col-sm-2 control-label"><span class="asterisk_red">*</span>刮刮卡编号：</label>

            <div class="col-sm-4">
                <input type="text" class="form-control" data-ng-model="authorizationCode.guagCardNo" name="guagCardNo" required autocomplete="off"
                       readonly/>
            </div>
            </div>

            <div data-ng-class="{'has-error':utmAddAuthIdForm.guagCardAuthCode.$dirty && utmAddAuthIdForm.guagCardAuthCode.$invalid}">
            <label class="col-sm-2 control-label"><span class="asterisk_red">*</span>刮刮卡授权码：</label>

            <div class="col-sm-4">
                <input type="text" class="form-control" data-ng-model="authorizationCode.guagCardAuthCode" name="guagCardAuthCode" required autocomplete="off"
                       readonly/>

            </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">日期：</label>

            <div class="col-sm-4">
                <input type="text" class="form-control" readonly def-laydate datetype='datetime' id="importTime"
                       data-ng-required="true" data-ng-model="authorizationCode.importTime" name="importTime" />
            </div>
            <label class="col-sm-2 control-label">授权类型：</label>

            <div class="col-sm-4">
                <select class="form-control" readonly name="authType" data-ng-model="authorizationCode.authType">
                    <option value="">-- 请选择 --</option>
                    <option value="1">正式授权</option>
                    <option value="2">临时授权</option>
                </select>
            </div>
        </div>
        <div class="form-group">

            <label class="col-sm-2 control-label"><span class="asterisk_red">*</span>详情：</label>

            <div class="col-sm-10">
                <textarea class="form-control" rows="4" readonly name="details" data-ng-model="authorizationCode.details"></textarea>
            </div>
        </div>
    </form>

</div>
<div class="modal-footer">
    <button class="btn btn-sm btn-white" data-ng-click="cancel()"><i class="fa fa-close"></i>&nbsp;关闭</button>
</div>